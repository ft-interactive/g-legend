{
  "name": "g-legend",
  "version": "0.0.6",
  "description": "{DESCRIPTION}",
  "keywords": [
    "legend",
    "d3",
    "d3-module"
  ],
  "license": "BSD-3-Clause",
  "main": "build/g-legend.js",
  "jsnext:main": "index",
  "module": "index.js",
  "homepage": "https://github.com/ft-interactive/g-legend",
  "repository": {
    "type": "git",
    "url": "https://github.com/ft-interactive/g-legend.git"
  },
  "scripts": {
    "pretest": "rm -rf build && mkdir build && rollup --globals d3:d3,g-chartcolour:gChartcolour -f umd -n gLegend -o build/g-legend.js -- index.js",
    "test": "nyc --reporter=lcov tape -r babel-register 'test/**/*-test.js' | tap-spec",
    "report-coverage": "nyc report --reporter=lcov | codecov",
    "prepublish": "npm run test && uglifyjs build/g-legend.js -c -m -o build/g-legend.min.js",
    "postpublish": "zip -j build/g-legend.zip -- LICENSE README.md build/g-legend.js build/g-legend.min.js"
  },
  "dependencies": {
    "d3": "^4.9.1",
    "g-chartcolour": "github:ft-interactive/g-chartcolour"
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.31",
    "@babel/preset-env": "^7.0.0-beta.31",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.0",
    "babel-register": "^6.26.0",
    "codecov": "^3.0.0",
    "eslint": "^4.10.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.8.0",
    "nyc": "^11.3.0",
    "rollup": "0.27",
    "tap-spec": "^4.1.1",
    "tape": "4",
    "uglify-es": "^3.0.20"
  }
}
